package Graficos;

import java.awt.image.BufferedImage;

/**
 *
 * @author migue
 */
public class Assets {
	//Strings naves
    private static String rutaPlayer = "/naves/player.png";
    private static String rutaUfo = "/naves/ufo.png";
    
    //Strings efectos
    private static String rutaPropulsion = "/efectos/fire08.png";
    
    //Strings lasers
    private static String rutalaserazul = "/lasers/laserAzul.png";
    private static String rutalaserrojo = "/lasers/laserRojo.png";
    private static String rutalaserverde = "/lasers/laserVerde.png";
        
    //Naves
    public static BufferedImage player;
    public static BufferedImage UFO;
    
    //Efectos
    public static BufferedImage propulsion;
    public static BufferedImage[]explosion = new BufferedImage[9];
    
    //Lasers
    public static BufferedImage laserazul;
    public static BufferedImage laserrojo;
    public static BufferedImage laserverde;
    
    //Meteoros
    public static BufferedImage[]grandes = new BufferedImage[4];
    public static BufferedImage[]medianos = new BufferedImage[2];
    public static BufferedImage[]pequeños = new BufferedImage[2];
    public static BufferedImage[]enanos = new BufferedImage[2];
    
    //
    public static BufferedImage[]numeros = new BufferedImage[11];
    public static BufferedImage vida;
    
    public static void init(){
    	
    	//naves
        player = Loader.ImageLoader(rutaPlayer);
        UFO = Loader.ImageLoader(rutaUfo);
        
        //Propulsion
        propulsion = Loader.ImageLoader(rutaPropulsion);
        
        //Laser
        laserazul = Loader.ImageLoader(rutalaserazul);
        laserrojo = Loader.ImageLoader(rutalaserrojo);
        laserverde = Loader.ImageLoader(rutalaserverde);
        
        //Vida
        vida = Loader.ImageLoader("/otros/life.png");
        //Meteoros
        for(int i = 0 ; i < grandes.length ; i++ ) {
        	grandes[i] = Loader.ImageLoader("/meteoros/Grande"+(i+1)+".png");
        	System.out.println("/meteoros/Grande"+(i+1)+".png");
        }
        for(int i = 0 ; i < medianos.length ; i++ ) {
        	medianos[i] = Loader.ImageLoader("/meteoros/Mediano"+(i+1)+".png");
        	System.out.println("meteoros/Mediano"+(i+1)+".png");
        }
        for(int i = 0 ; i < pequeños.length ; i++ ) {
        	pequeños[i] = Loader.ImageLoader("/meteoros/Pequeño"+(i+1)+".png");
        	System.out.println("meteoros/Pequeño"+(i+1)+".png");
        }
        for(int i = 0 ; i < enanos.length ; i++ ) {
        	enanos[i] = Loader.ImageLoader("/meteoros/Enano"+(i+1)+".png");
        	System.out.println("meteoros/Enano"+(i+1)+".png");
        }
        
        //Explosion
        for(int i = 0 ; i <explosion.length ; i++) {
        	explosion[i] = Loader.ImageLoader("/efectos/"+(i)+".png");
        	System.out.println("/efectos/"+(i)+".png");
        }
        
        //Numeros
        for(int i = 0 ; i < numeros.length ; i++) {
        	numeros[i] = Loader.ImageLoader("/numeros/"+(i)+".png");
        }
        
    }
}
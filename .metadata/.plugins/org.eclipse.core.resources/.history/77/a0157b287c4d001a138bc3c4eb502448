package Estados;

import java.awt.Graphics;
import java.util.ArrayList;

import Graficos.Assets;
import ObjetosdeJuego.Constantes;
import UI.Action;
import UI.Boton;

public class MenuState extends EstadoBase	 {
	
	private ArrayList<Boton>botones;
	
	public MenuState() {
		botones = new ArrayList<Boton>();
		
		botones.add(new Boton(
				Assets.greyBtn,
				Assets.blueBtn,
				Constantes.WIDTH/2-Assets.greyBtn.getWidth()/2,
				Constantes.HEIGHT/2-Assets.greyBtn.getHeight(),
				"PLAY",
				new Action() {
					@Override
					public void doAction() {
						EstadoBase.changeState(new GameState());
					}
				}
				
				));
		
	}
	
	@Override
	public void update() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void draw(Graphics g) {
		// TODO Auto-generated method stub
		
	}

}
